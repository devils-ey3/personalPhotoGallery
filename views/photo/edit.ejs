<% include ../partial/header.ejs %>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit photo</h1>
            <div style="width:30%;margin:0 auto;">
                <form action="/photo/<%= data._id %>?_method=PUT" method="POST">
                    <div class="form-group"> Title
                        <input class="form-control" type="text" name='photo[title]' placeholder="Title" value="<%= data.title %>">
                    </div>
                    <div class="form-group"> Image Link 
                        <input class="form-control" type="text" name='photo[image]' placeholder="Image Link" value="<%= data.image %>">
                    </div>
                    <div class="form-group"> Image Description
                        <input class="form-control" type="text" name='photo[description]' placeholder="Image Description" value="<%= data.description %>">
                    </div>
                    <div class="form-group">
                        <button class='btn btn-lg btn-primary btn-block'>Submit</button>
                    </div>
                </form>
                <a href="/">Go back</a>
            </div>
        </div>
    </div>

    <% include ../partial/footer.ejs %>
